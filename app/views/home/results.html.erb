<div>
  <div id="search_header" class="content content-list">
    <%= form_tag(url: search_url) do %>
      <div id="select_button_search" class="six columns">
        <%= select_tag(:group, options_for_select(groups_to_select_from), class: "chosen-select", prompt: "Group..." ) %>
        <br/>
        <br/>
        <%= select_tag(:posts_cant, options_for_select(posts_amount), class: "chosen-select", prompt: "Posts count...") %> 
      </div>
      <br/>

      <div id="search_button_container" class="two columns">
        <div id="search_button_div">
          <%= submit_tag "Search", id: "search_button", class: "button button-blue" %>
        </div>
        <div id="loading">
          <%= image_tag "roller.gif" %>
        </div>
      </div>
      <br/>
      <div id="search_box" class="four columns">
        <input id="search_input" type="text" placeholder="sell, buy, any keyword ..." style="width:300px">
        <span id="num_results"></span> posts found
      </div>
    <% end %>
  </div>
</div>

<div id="ajax_results">
  <%= render partial: "feed" %>
</div>
